{
    "name": "dranzd/storebunk-accounting",
    "description": "Storebunk Accounting library",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "dranzd/common-event-sourcing": "dev-master",
        "dranzd/common-utils": "dev-master",
        "dranzd/common-domain-assert": "dev-master",
        "dranzd/common-valueobject": "dev-master",
        "dranzd/common-cqrs": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.8"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:dranzd/common-event-sourcing.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:dranzd/common-utils.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:dranzd/common-domain-assert.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:dranzd/common-valueobject.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:dranzd/common-cqrs.git"
        }
    ],
    "autoload": {
        "psr-4": {
            "Dranzd\\StorebunkAccounting\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse",
        "phpcs": "phpcs",
        "phpcbf": "phpcbf",
        "check": [
            "@phpstan",
            "@phpcs",
            "@test"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
